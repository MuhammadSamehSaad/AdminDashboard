@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="SignUp">

            <input class="text" asp-for="@Model.FirstName" placeholder="First Name" required="">
            <br />
            <input class="text" asp-for="@Model.LastName" placeholder="Last Name" required="">
            <br />
            <input class="text" asp-for="@Model.UserName" placeholder="User Name" required="">

            <input class="email" asp-for="@Model.Email" placeholder="Email" required="">

            <input class="text" asp-for="@Model.Password" placeholder="Password" required="">

            <input class="text w3lpass" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">
            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="@Model.IsAgree" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <p>Don't have an Account? <a asp-action="SignIn"> Login Now!</a></p>
    </div>
</div>